<%= form_with  url: book_book_comments_path(@book.id), local: true do |f| %>
    <div class="form-group">
        <%= f.text_area :comment, class: 'form-control book_body' %>
    </div>
    <div class="form-group">
        <%= f.submit "送信", class: 'btn btn-light btn-outline-dark' %>
    </div>
<% end %>